<table id="tagTable" class='table dataTable data-table table-condensed table-hover'>
    <thead>
      <tr>
        <th>tags</th>
      </tr>
    </thead>
    <tbody>
      <% @tags.sort_by {|t| t.value }.each do |t| %>
          <tr>
            <td><%= t.value %></td>
            <td>
              <p data-placement="top" data-toggle="tooltip" title="Delete">
                <%= link_to "<i class='glyphicon glyphicon-minus-sign'></i>".html_safe, tag_path(t), method: :delete, data: { confirm: 'Delete tag?' } %>
              </p>
            </td>
          </tr>
      <% end %>
    </tbody>
</table>

<form>
<script>

  $('#newTag').focusout(function() {
    alert('adding new tag');
    new_tag=$(this).val();
    nct_id = '<%= @study.nct_id %>';
    $.ajax({
        type: "POST",
        url: "/tags",
        data: {new_tag: new_tag, nct_id: nct_id },
        dataType: "script",
        success: function(data) {
          $('#tag-list').load(data);
           //$('#tag_list').html(data);
        }
    });
    return false;
  });
</script>

<div class="input-group changethisone">
    <input type="text"  class="form-control" placeholder="add a tag..." aria-describedby='tagHelp'/>
    <span class="input-group-addon">
        <%= link_to "<i class='glyphicon glyphicon-plus-sign'></i>".html_safe, new_tag_path %>
    </span>
</div>
   <small id="tagHelp" class="form-text text-muted">Enter a string to help identify the study.</small>

</form>
